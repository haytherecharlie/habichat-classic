{
  "firestore": {
    "rules": "firebase.db.rules",
    "indexes": "firebase.db.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"]
  },
  "hosting": [
    {
      "target": "www",
      "public": "hosting/www",
      "rewrites": [
        {
          "source": "/createUser",
          "function": "createUser"
        }
      ]
    },
    {
      "target": "auth",
      "public": "hosting/auth/public"
    }
  ],
  "storage": {
    "rules": "firebase.hd.rules"
  }
}

{
  "firestore": {
    "rules": "firebase.db.rules",
    "indexes": "firebase.db.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "hosting/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "firebase.hd.rules"
  }
}
